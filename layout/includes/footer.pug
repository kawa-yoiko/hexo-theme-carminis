#footer.layout
  - var now = new Date()
  - var nowYear = now.getFullYear()
  .copyright
    i.fa.fa-copyright
    if theme.since && theme.since != nowYear
      != ` ${theme.since} - ${nowYear} by ${config.author}`
    else
      != ` ${nowYear} by ${config.author}`
  .framework-info
    span Brimming with 
      i.fa.fa-heart
    span.footer-separator |
    span= _p('footer.driven') + ' '
    a(href='http://hexo.io')
      span Hexo
    span.footer-separator |
    span= _p('footer.theme') + ' '
    a(href='https://github.com/kawa-yoiko/hexo-theme-melody')
      span Carminis
    | , a fork of 
    a(href='https://github.com/Molunerfinn/hexo-theme-melody')
      span Melody
  if theme.footer_custom_text
    .footer_custom_text!=`${theme.footer_custom_text}`   
  if theme.ICP.enable
    .icp
      a(href=theme.ICP.url)
        span=theme.ICP.text
  if theme.busuanzi.enable
    include ./count/busuanzi.pug
