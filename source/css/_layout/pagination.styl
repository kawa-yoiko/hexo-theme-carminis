#pagination
  overflow: hidden
  margin-top: 1rem
  width: 100%

  .pagination
    text-align: center

  a.extend:hover
    color: $light-cyan

  i.fa.fa-chevron-left
    margin-right: 0.3rem
    cursor: pointer

  i.fa.fa-chevron-right
    margin-left: 0.3rem
    cursor: pointer

  .space
    color: $a-link-color

  .page-number
    display: inline-block
    margin: 0 0.2rem
    min-width: w = 1.6rem
    height: w
    text-align: center
    line-height: w
    cursor: pointer
    border-radius: (w / 2)
    text-decoration: none

    &:hover
      color: $white
      background: $pale-cyan

    &.current
      background: $cyan
      color: $white
      cursor: default